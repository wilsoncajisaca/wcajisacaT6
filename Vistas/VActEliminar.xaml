<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wcajisacaT6.Vistas.VActEliminar"
             Title="VActEliminar">
    <VerticalStackLayout>
        <Label 
            Text="Actualizar / Eliminar"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="txtCodigo" IsReadOnly="True"/>
        <Entry x:Name="txtNombre" Placeholder="Nombre"/>
        <Entry x:Name="txtApellido" Placeholder="Apellido"/>
        <Entry x:Name="txtEdad" Placeholder="Edad"/>

        <Button x:Name="btnActualizar" Clicked="btnActualizar_Clicked" Text="Actualizar"/>
        <Button x:Name="btnEliminar" Clicked="btnEliminar_Clicked"  Text="Eliminar"/>

    </VerticalStackLayout>
</ContentPage>